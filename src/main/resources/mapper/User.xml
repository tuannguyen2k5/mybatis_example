<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mybatis_example.mapper.UserMapper">


	<resultMap id = "UserResult" type="com.example.mybatis_example.model.User" >
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="status" column="status" />
	</resultMap>

	<select id="selectAllUser" resultMap="UserResult">
		select * from user;
	</select>

	<select id="selectUserById" parameterType="int"
		resultType="com.example.mybatis_example.model.User">
		select * from user where id = #{id};
	</select>

	<insert id="insertUser" parameterType="com.example.mybatis_example.model.User">
		insert into
		user(name,status)
		values(#{name},#{status});
	</insert>

	<update id="updateUser" parameterType="com.example.mybatis_example.model.User">
		update user
		set
		name=#{name},status=#{status}
		where id=#{id};
	</update>
	<delete id="deleteUserById" parameterType="int">
		delete from user where
		id=#{id};
	</delete>

</mapper>